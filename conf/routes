POST	    /v1/books			controllers.BookController.create(request: Request)
GET         /v1/books           controllers.BookController.list()
GET         /v1/books/:id       controllers.BookController.get(id: Long)
PUT         /v1/books/:id       controllers.BookController.update(id: Long, request: Request)
DELETE      /v1/books/:id       controllers.BookController.delete(id: Long)
